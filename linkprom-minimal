OUTPUT_ARCH(sparc)
__DYNAMIC  =  0;

/* Absolutely minimal linker script for PROM support
 * 
 * Only links .text/.rodata section.
 *
 * Prom is expected to perform IU initialization
 * and then jump to RAM.
 */

MEMORY
{
  rom     : ORIGIN = 0x00000000, LENGTH = 16M
}

SECTIONS
{
  .text :
  {
    _text_start = .;
    *(.text)
    . = ALIGN (16);
  } > rom
  .rodata :
  {
    _rodata_start = .;
    *(.rodata)
    . = ALIGN (16);
  } > rom
}
